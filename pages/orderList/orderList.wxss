/* pages/orderList/orderList.wxss */
.top {
  width: 100%;
  height: 175rpx;
  position: relative;
}
.top_bg {
  width: 100%;
  height: 100%;
  position: absolute;
}
.top_back {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  bottom: 23rpx;
  left: 30rpx;
}
.back_bg {
  width: 100%;
  height: 100%;
}
.top_text {
  width: 310rpx;
  height: 50rpx;
  font-size: 36rpx;
  font-family: PingFang SC, PingFang SC-Medium;
  font-weight: 500;
  text-align: CENTER;
  color: #ffffff;
  position: absolute;
  bottom: 18rpx;
  left: 220rpx;
}
.content {
  width: 100%;
  height: 100%;
  position: relative;
}
.listTitleContent {
  width: 750rpx;
  height: 114rpx;
  background: #ffffff;
  box-shadow: 0rpx 4rpx 16rpx 0rpx rgba(40,121,11,0.10);
  overflow: hidden;
}
.listTitle {
  width: 432rpx;
  height: 45rpx;
  margin: 58rpx 0 0 60rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
}
.listTitleItem {
  height: 45rpx;
  font-size: 32rpx;
  font-family: PingFang SC, PingFang SC-Medium;
  font-weight: 500;
  text-align: LEFT;
  color: #666666;
  letter-spacing: 0rpx;
  padding: -20rpx -5rpx;
}
.isActive {
  color: #3fa244;
  border-bottom: 6rpx #f6aa17 solid;
}
.orderDetailContent {
  width: 690rpx;
  height: 380rpx;
  background: #ffffff;
  border-radius: 10rpx;
  box-shadow: 0rpx 4rpx 16rpx 0rpx rgba(40,121,11,0.10);
  margin: 20rpx auto 0 auto;
  overflow: hidden;
}
.detailTitle {
  min-width: 674rpx;
  height: 45rpx;
  margin-top: 31rpx;
  border-left: 8rpx #019a43 solid;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.detailOrderNumber {
  min-width: 508rpx;
  height: 45rpx;
  font-size: 32rpx;
  font-family: PingFang SC, PingFang SC-Medium;
  font-weight: 500;
  text-align: LEFT;
  color: #666666;
  letter-spacing: 0rpx;
  margin-left: 10rpx;
}
.orderState {
  min-width: 108rpx;
  height: 39rpx;
  font-size: 28rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: center;
  color: #666666;
  letter-spacing: 0rpx;
}
.detailUserContent {
  width: 660rpx;
  height: 211rpx;
  border-top: 1rpx #E9E9E9 dashed;
  box-shadow: 0rpx 0rpx 0rpx 0rpx rgba(85,163,58,0.17);
  margin: 15rpx auto 0 auto;
  /* border: 1px red solid; */
}
.detailUserInfo {
  min-width: 521rpx;
  height: 39rpx;
  margin: 20rpx 0 0 5rpx;
  font-size: 28rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: LEFT;
  color: #666666;
  letter-spacing: 0rpx;
  display: flex;
  align-items: center;
}
.userPhone {
  margin-left: 30rpx;
}
.successPay {
  color: #f6aa17;
}
.userWorkContent {
  min-width: 646rpx;
  height: 68rpx;
  font-size: 24rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: LEFT;
  color: #9a9a9a;
  letter-spacing: 0rpx;
  margin: 20rpx 0 0 5rpx;
  text-overflow: ellipsis;
  overflow: hidden;
}
.workTime {
  min-width: 490rpx;
  height: 34rpx;
  margin: 10rpx 0 0 5rpx;
  display: flex;
  align-items: center;
}
.workTimeBg {
  width: 22rpx;
  height: 22rpx;
  position: relative;
}
.workTime_bg {
  width: 100%;
  height: 100%;
  position: absolute;
}
.workTimeNumber {
  font-size: 24rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: LEFT;
  color: #9a9a9a;
  letter-spacing: 0rpx;
  margin-left: 10rpx;
  line-height: 34rpx;
}
.detailPriceContent {
  width: 680rpx;
  height: 73rpx;
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: LEFT;
  color: #019a43;
  letter-spacing: 0rpx;
  justify-content: space-between;
  background: linear-gradient(180deg,rgba(215,215,215,0.07), undefined 100%);
  box-shadow: 0rpx 0rpx 5rpx 0rpx rgba(85,163,58,0.17); 
}
.totalPrice {
  min-width: 340rpx;
  height: 45rpx;
  margin-left: 23rpx;
}
.totalRecord {
  width: 44rpx;
  height: 44rpx;
  margin-left: 88rpx;
}
.share {
  width: 140rpx;
  height: 54rpx;
}
.totalRecord_bg {
  width: 100%;
  height: 100%;
}
.share_bg {
  width: 100%;
  height: 100%;
}
